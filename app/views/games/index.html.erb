<div class="page-header">
  <h1>Your Game Shelf</h1>
</div>

<%= link_to "Add a game", new_game_path, class: "btn btn-success" %>

<% @games.each do |game| %>
<div class="game">
  <strong><%= game.user.full_name %></strong> | <%= game.name %>
  <div class="meta">
    <%= link_to time_ago_in_words(game.created_at) + " ago", game %>
    <span class="admin">
      <%= link_to "Edit game", edit_game_path(game) %> |
      <%= link_to "Remove from shelf", game, method: :delete, data: { confirm: "Are you sure you want to remove this game from your shelf?"} %>
    </span>
  </div> 
</div>
<% end %>